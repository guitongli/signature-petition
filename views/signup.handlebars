<div class ='signup'>
                      
<form id = 'form' method="POST">
     <h1>Sign up</h1> 
       <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <div class = 'signup__entry'>
        <img src="./app/images/icon-online.svg" alt="firstimg">
        <input type="text" id= "firstname" name ="firstname" placeholder = 'Firstname'></input>
  
  <input type="text" id="lastname" name = "lastname" placeholder="Lastname"></input>
</div>
   
<div class = 'signup__entry'> 
    <img src="./app/images/icon-budgeting.svg" alt="emailimg"> 
 <input type="text" id="email" name = "email" placeholder="E-mail"></input>
 </div>
 <div class = 'signup__entry'>
    <img src="./app/images/icon-onboarding.svg">
    <input type="password" id="keys" name = "keys" placeholder="Password"></input>
    </div>

 
<div class="entry">{{#if incomplete}}
            <h6>Please check your info and submit again</h6>
            {{/if}}
        </div>
        <div class="entry">{{#if internalErr}}
            <h6>Oops. It's our fault. Try again later!</h6>
            {{/if}}
        </div>
           <div><button id = "signup" type="submit">Submit</button></div>

           
    </form>
  </div>