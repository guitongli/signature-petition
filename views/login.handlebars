<div class ='signup'>
                      
<form id = 'form' method="POST">
     <h1>Login</h1> 
       <input type="hidden" name="_csrf" value="{{csrfToken}}">
     
   
    <div class = 'signup__entry'>
        <img src="./app/images/icon-online.svg" alt="firstimg">
        <input type="text" id= "email" name ="email" placeholder = 'Email'></input>
  

</div>
   
<div class = 'signup__entry'> 
    <img src="./app/images/icon-budgeting.svg" alt="emailimg"> 
 <input type="password" id="keys" name = "keys" placeholder="Password"></input>
 </div>


<div class="entry">{{#if incomplete}}
            <h6>Please check your info and submit again</h6>
            {{/if}}
</div>
<div class="entry">{{#if nonexist}}
            <h6>User doesn't exist</h6> 
            {{/if}}
</div>
<div class="entry">{{#if internalErr}}
            <h6>Oops. It's our fault. Try again later!</h6>
            {{/if}}
</div>
           <div><button type="submit">Submit</button></div>

           
    </form>
 </div>